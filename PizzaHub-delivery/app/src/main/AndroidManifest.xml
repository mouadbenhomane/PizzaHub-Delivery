<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ensa.pizzahub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_square"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_square"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ensa.pizzahub.PizzaDetails"></activity>
        <activity android:name="com.ensa.pizzahub.CartActivity"></activity>
        <activity android:name="com.ensa.pizzahub.HistoryActivity"></activity>
        <activity android:name="com.ensa.pizzahub.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>